{
    "name": "@forcir/tsconfig",
    "version": "1.0.4",
    "private": false,
    "description": "Shared configuration for a consistent experience using TypeScript.",
    "license": "MIT",
    "type": "module",
    "main": "./tsconfig.json",
    "files": [
        "./tsconfig.json"
    ],
    "scripts": {
        "format": "prettier --check \"**/*.{cjs,js,json,md,ts,tsx}\"",
        "format:fix": "prettier --write \"**/*.{cjs,js,json,md,ts,tsx}\""
    },
    "devDependencies": {
        "@forcir/prettier-config": "1.0.0",
        "prettier": "3.0.1"
    },
    "packageManager": "pnpm@8.6.11"
}
